<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="departmentName" type="String" />
    <aura:attribute name="sortedViewMsg" type="String" />
    <!-- PAGE HEADER -->
	<div class="">
    <div class="slds-page-header bgColorHeader">
	<div class="slds-page-header__row bgColorHeader">
		<div class="slds-page-header__col-title">
			<div class="slds-media">
				<div class="slds-media__figure">
					<span class="slds-icon_container slds-icon-standard-opportunity" title="opportunity">
						
							<lightning:icon iconName="standard:account"  />
							<span class="slds-assistive-text"></span>
						</span>
					</div>
					<div class="slds-media__body">
						<div class="slds-page-header__name">
							<div class="slds-page-header__name-title">
								<h1>
									<span class="slds-page-header__title slds-truncate" title="Rohde Corp - 80,000 Widgets">
									{!v.departmentName}
									</span>
								</h1>
							</div>
						</div>
						<p class="slds-page-header__name-meta">
							{!v.sortedViewMsg}
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
    </div>
	<!-- / PAGE HEADER -->	
</aura:component>